<header class="encabezado">
  <h1 class="titulo_principal">Centro Médico Back-End</h1>
</header>
<main class="contenido">
  <h2 class="titulo_seccion">Listado citas</h2>
  <table>
    <thead>
      <tr>
        <th>Fecha cita</th>
        <th>Paciente</th>
        <th>Telefono paciente</th>
        <th>Especialidad</th>
        <th>Consultorio</th>
        <th>Medico</th>
      </tr>
    </thead>
    <tbody>
      <!-- Se agrega el contenido dinamicamente por medio de Handlebars -->
      {{#each resultado}}
        <tr>
          <td>{{formatoFecha fecha_cita}}</td>
          <td>{{nombres}} {{apellidos}}</td>
          <td>{{telefono}}</td>
          <td>{{especialidad}}</td>
          <td>{{consultorio}}</td>
          <td>{{nombresMedico}} {{apellidosMedico}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="../index.html"><input type="button" value="Volver" /></a>
</main>
<footer class="pie_pagina">
